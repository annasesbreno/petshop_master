<head>
  <style>
  body {font-size:20px; color:#2d2d2d; margin:0; background-color:#f9f9f9;}
  button {font-size:12px;}
  h1 {color:#605e66;}
  </style>

<center><h1>Pet Shop Inventory</h1></center>

<center><h3>Sign Up</h3></center>

<%= form_for @user do |f| %>
  <% if @user.errors.any? %>
    <div class="error_messages">
      <h2>Form is invalid</h2>
      <ul>
        <% @user.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>
  <center><div class="field">
    <%= f.label 'Email' %><br />
    <%= f.text_field :email %>
  </div></center>
  <center><div class="field">
    <%= f.label 'Password' %><br />
    <%= f.password_field :password %>
  </div></center>
  <center><div class="field">
    <%= f.label 'Password Confirmation' %><br />
    <%= f.password_field :password_confirmation %>
  </div></center>
  <center><div class="actions"><button><%= link_to 'Sign Up', login_path %></button></div></center>
<% end %>