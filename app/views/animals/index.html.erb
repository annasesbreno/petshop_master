<p id="notice"><%= notice %></p>

<div>
  <center><h1>Pet Shop Inventory</h1></center>
</div>

<h3>Animals</h3>

<table>
  <thead>
    <tr>
      <th><center>Species</center></th>
      <th><center>Breed</center></th>
      <th><center>Price</center></th>
      <th><center>Status<center></th>
      <th colspan="3"></th>
    </tr>
  </thead>

<%= form_tag(animals_path, method: :get) do %>
  <%= text_field_tag :animal, params[:animal] %>
    <%= radio_button_tag(:Species, '', params[:Species].nil?) %>
    <%= label_tag :Species %>
    <%= radio_button_tag(:Breed, '', params[:Breed].nil?) %>
    <%= label_tag :Breed %>
    <%= radio_button_tag(:Status, '', params[:Status].nil?) %>
    <%= label_tag :Status %>
  <%= submit_tag 'Search', Species: nil, Breed: nil, Status: nil, Price: nil%>
<% end %>

<tbody>
  <% @animal.each do |animal| %>
    <tr>
      <td><center><%= animal.Species %></center></td>
      <td><%= animal.Breed %></td>
      <td><%= animal.Price %></td>
      <td><%= animal.Status %></td>
    <% if animal.Status == 'For Sale' %>
        <td><button><%= link_to 'Mark as Sold', animal_change_status_sold_path(animal)%></button></td>
      <% else %>
      <td><button><%= link_to 'Mark as Sale', animal_change_status_sale_path(animal)%></button></td>
        <%end%>
        <td><button><%= link_to 'Show', animal%></button></td>
        <td><button><%= link_to 'Edit', edit_animal_path(animal) %></button></td> 
        <td><button><%= link_to 'Delete', animal, method: :delete, data: { confirm: 'Are you sure?' } %></button>  </td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>
<button><%= link_to 'Add Animal', new_animal_path %></button> 
<button><%= link_to 'Inventory', show_inventory_path%></button>