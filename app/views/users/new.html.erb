<style> 
  h1 {background-color: #339933; color: #f2f2f2;} 
  body {font-size:20px; color:#339933; margin:0; background-color:#F5F5F5;}
  button {font-size:12px;}
</style>

<center><h1>Sign Up</h1></center>

<header>
  <center><img class="pet-image" src="http://thepetshopaz.com/wp-content/uploads/2015/08/logo_retina.png" alt="Pet Shop Inventory" width="500" height="200"></center>
</header>
<br>

<%= form_for @user do |f| %>
  <% if @user.errors.any? %>
    <div class="error_messages">
      <h2>Form is invalid</h2>
      <ul>
        <% @user.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>
  <center><div class="field">
    <%= f.label 'Email' %><br />
    <%= f.text_field :email %>
  </div></center>
  <center><div class="field">
    <%= f.label 'Password' %><br />
    <%= f.password_field :password %>
  </div></center>
  <center><div class="field">
    <%= f.label 'Password Confirmation' %><br />
    <%= f.password_field :password_confirmation %>
  </div></center>
  <center><div class="actions"><button><%= link_to 'Sign Up', login_path %></button></div></center>
<% end %>