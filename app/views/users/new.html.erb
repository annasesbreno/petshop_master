<style>
  h1 {background-color: #A9A9A9; color: #f2f2f2;}
  body {font-size:20px; margin:0;}
</style>

<center><h1>Sign Up</h1></center>
<header>
  <img class="pet-image" src="https://www.planitbusiness.com/wp-content/uploads/2017/03/Pets.jpg" alt="Pet Shop Inventory" width="1250" height="300">
</header>

<%= form_for @user do |f| %>
  <% if @user.errors.any? %>
    <div class="error_messages">
      <h2>Form is invalid</h2>
      <ul>
        <% @user.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>
  <center><div class="field">
    <%= f.label 'Email' %><br />
    <%= f.text_field :email %>
  </div></center>
  <center><div class="field">
    <%= f.label 'Password' %><br />
    <%= f.password_field :password %>
  </div></center>
  <center><div class="field">
    <%= f.label 'Password Confirmation' %><br />
    <%= f.password_field :password_confirmation %>
  </div></center>
  <center><div class="actions"><button><%= link_to 'Sign Up', login_path %></button></div></center>
<% end %>