<style> 
  h1 {background-color: #339933; color: #f2f2f2;} 
  body {font-size:20px; color:#339933; margin:0; background-color:#F5F5F5;}
</style>

<center><h1>Log In</h1></center>

<header>
  <center><img class="pet-image" src="http://thepetshopaz.com/wp-content/uploads/2015/08/logo_retina.png" alt="Pet Shop Inventory" width="500" height="200"></center>
</header>
<br>

<%= form_tag sessions_path do %>
  <center><div class="field">
    <%= label_tag 'Email' %><br />
    <%= text_field_tag :email, params[:email] %>
  </div></center>
  <center><div class="field">
    <%= label_tag 'Password' %><br />
    <%= password_field_tag :password %>
  </div></center>
  <center><div class="actions"><%= submit_tag "Log In" %></div></center>
<% end %>
<br><center>New User? <%= link_to 'Sign Up', signup_path %></center>