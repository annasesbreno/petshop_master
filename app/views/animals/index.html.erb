<head>
  <style>
  body {font-size:20px; color:#339933; margin:0; background-color:#F5F5F5;}
  .topnav {overflow: hidden; background-color: #339933;}
  .topnav a {float: left; display: block; color: #f2f2f2; text-align: center; padding: 14px 16px; text-decoration: none; font-size: 17px;}
  .topnav a:hover {background-color: #00cccc; color: black;}
  </style>
</head>

<div class="topnav">
  <a class="active" href="/animals">Home</a>
  <a href="/animals/new">New Animal</a>
  <a href="/show_inventory">Inventory</a>
  <a href="/login">Logout</a>
</div><br>

<header>
  <center><img class="pet-image" src="http://thepetshopaz.com/wp-content/uploads/2015/08/logo_retina.png" alt="Pet Shop Inventory" width="500" height="200"></center>
</header><br><center>

<table>
  <thead>
    <tr>
      <th>Species</th>
      <th>Breed</th>
      <th>Price</th>
      <th>Status</th>
      <th><colspan="3"></th>
    </tr>
  </thead>
<center>
<%= form_tag('/', method: 'get') do %>
  <%= text_field_tag 'query' %>
  <%= submit_tag 'Filter' %>
  <br><%= radio_button_tag 'field', 'Species' %> Species
  <%= radio_button_tag 'field', 'Breed' %> Breed
  <%= radio_button_tag 'field', 'Price' %> Price
  <%= radio_button_tag 'field', 'Status' %> Status
</center>
<% end %>
<% @animal.each do |animal| %>
<br>
  <td><%= animal.Species %></td>
  <td><%= animal.Breed %></td>
  <td><%= animal.Price %></td>
  <td><%= animal.Status %></td>
    <% if animal.Status == 'For Sale' %>
      <td><button><%= link_to 'Mark as Sold', animal_change_status_sold_path(animal)%></button></td>
    <% else %>
      <td><button><%= link_to 'Mark as For Sale', animal_change_status_sale_path(animal)%></button></td>
    <%end%>
      <td><button><%= link_to 'Show', animal%></button></td>
      <td><button><%= link_to 'Edit', edit_animal_path(animal) %></button></td> 
      <td><button><%= link_to 'Delete', animal, method: :delete, data: { confirm: 'Are you sure?' } %></button></td>
    </tr>
  <% end %>
</tbody>
</table>
