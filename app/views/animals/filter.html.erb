<head>
  <style>
  body {font-size:20px; color:#2d2d2d; margin:0; background-color:#f9f9f9;}
  button {font-size:12px;}
  h1 {color:#605e66;}
  .topnav {overflow: hidden; background-color: #4f4e4f;}
  .topnav a {float: left; display: block; color: #f2f2f2; text-align: center; padding: 14px 16px; text-decoration: none; font-size: 17px;}
  .topnav a:hover {background-color: #605e66; color: black;}
  </style>
</head>

<div class="topnav">
  <a class="active" href="/animals">Home</a>
  <a href="/animals/new">New Animal</a>
  <a href="/show_inventory">Inventory</a>
</div>
<br>
<center><h1>Pet Shop Inventory</h1></center>
<br>
<center>
<table>
  <thead>
    <tr>
      <th>Species</th>
      <th>Breed</th>
      <th>Price</th>
      <th>Status</th>
      <th><colspan="3"></th>
    </tr>
  </thead>
  <center><%= form_tag('/', method: 'get') do %>
  <%= text_field_tag 'query' %>
  <%= submit_tag 'Filter' %>
  <br><%= radio_button_tag 'field', 'species' %> Species
  <%= radio_button_tag 'field', 'breed' %> Breed
  <%= radio_button_tag 'field', 'price' %> Price
  <%= radio_button_tag 'field', 'status' %> Status</center>
<% end %>
<% @animal.each do |animal| %>
<br>
  <center><td><%= animal.Species %></td>
  <td><%= animal.Breed %></td>
  <td><%= animal.Price %></td>
  <td><%= animal.Status %></td>
    <% if animal.Status == 'For Sale' %>
      <td><button><%= link_to 'Mark as Sold', animal_change_status_sold_path(animal)%></button></td>
    <% else %>
      <td><button><%= link_to 'Mark as For Sale', animal_change_status_sale_path(animal)%></button></td>
    <%end%>
      <td><button><%= link_to 'Show', animal%></button></td>
      <td><button><%= link_to 'Edit', edit_animal_path(animal) %></button></td> 
      <td><button><%= link_to 'Delete', animal, method: :delete, data: { confirm: 'Are you sure?' } %></button></td></center>
      </tr>
    <% end %>
  </tbody>
</table><br>
