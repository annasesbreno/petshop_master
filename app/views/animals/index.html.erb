<p id="notice"><%= notice %></p>

<div>
  <center><h1>Pet Shop Inventory</h1></center>
</div>
<br><br>
<table>
  <thead>
    <tr>
      <th>Species</th>
      <th>Breed</th>
      <th>Price</th>
      <th>Status</th>
      <th><colspan="3"></th>
    </tr>
  </thead>
<%= form_tag('/', method: 'get') do %>
  <%= text_field_tag 'query' %>
  <%= radio_button_tag 'field', 'Species' %> Species
  <%= radio_button_tag 'field', 'Breed' %> Breed
  <%= radio_button_tag 'field', 'Price' %> Price
  <%= radio_button_tag 'field', 'Status' %> Status
  <%= submit_tag 'Filter' %>
<% end %>
<% @animal.each do |animal| %>
<br>
        <td><%= animal.Species %></td>
        <td><%= animal.Breed %></td>
        <td><%= animal.Price %></td>
        <td><%= animal.Status %></td>
        <% if animal.Status == 'For Sale' %>
          <td><%= link_to 'Sold', animal_change_status_sold_path(animal)%></td>
        <% else %>
          <td><%= link_to 'For Sale', animal_change_status_sale_path(animal)%></td>
        <%end%>
        <td><%= link_to 'Show', animal%></td>
        <td><%= link_to 'Edit', edit_animal_path(animal) %></td> 
        <td><%= link_to 'Delete', animal, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>
<br>
<button><%= link_to 'Add Animal', new_animal_path %></button> |
<button><%= link_to 'Inventory', show_inventory_path%></button>